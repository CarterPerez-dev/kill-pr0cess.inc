    max_stars?: number;
    is_fork?: boolean;
    is_archived?: boolean;
    search?: string;
    sort?: string;
    direction?: string;
}

interface RepositoryResponse {
    repositories: Repository[];
    pagination: {
        current_page: number;
        per_page: number;
        total_pages: number;
        total_count: number;
        has_next_page: boolean;
        has_previous_page: boolean;
    };
